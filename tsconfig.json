{
  "compilerOptions": {
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "lib": ["esnext"],
    "esModuleInterop": true,
    "isolatedModules": true,
    "baseUrl": "./",
    "paths": {
      "@data/*": ["./data/*"]
    }
  },
  "include": [
    "./src/**/*",
    "./prisma/**/*",
    "./data/**/*",
    "./functions/**/*"
  ]
}
